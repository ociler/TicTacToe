<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_weight="1"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="12dp"
            android:text="Partides guanyades per cada jugador"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textJugador1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Jugador 1:        0"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textJugador2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jugador 2:        0"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="24sp" />

        <Button
            android:id="@+id/restartButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="25dp"
            android:onClick="onReiniciarTot"
            android:text="Reinitzialitzar comptador" />

        <TextView
            android:id="@+id/tornJugador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="Torn del jugador 1"
            android:textAlignment="center"
            android:textColor="#0C0000"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/tabla"
            android:layout_width="match_parent"
            android:layout_height="396dp"
            android:orientation="vertical"
            android:paddingTop="0dp">

            <LinearLayout
                android:id="@+id/linearOne"
                android:layout_width="match_parent"
                android:layout_height="98dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button00"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:onClick="moveDone"
                    android:text="0"
                    android:textColor="#E4D7D7"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/button01"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:onClick="moveDone"
                    android:text="1"
                    android:textColor="#E4D7D7"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/button02"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:onClick="moveDone"
                    android:text="2"
                    android:textColor="#E4D7D7"
                    android:textSize="30sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearTwo"
                android:layout_width="match_parent"
                android:layout_height="98dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button10"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:onClick="moveDone"
                    android:text="3"
                    android:textColor="#E4D7D7"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/button11"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:onClick="moveDone"
                    android:text="4"
                    android:textColor="#E4D7D7"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/button12"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:onClick="moveDone"
                    android:text="5"
                    android:textColor="#E4D7D7"
                    android:textSize="30sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearThree"
                android:layout_width="match_parent"
                android:layout_height="106dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button20"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:onClick="moveDone"
                    android:text="6"
                    android:textColor="#E4D7D7"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/button21"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:onClick="moveDone"
                    android:text="7"
                    android:textColor="#E4D7D7"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/button22"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:onClick="moveDone"
                    android:text="8"
                    android:textColor="#E4D7D7"
                    android:textSize="30sp" />

            </LinearLayout>

            <Button
                android:id="@+id/button18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onReiniciarTabler"
                android:text="Reiniciar tabler" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>